                $('#' + modalId).modal('hide');
            });
        });

        function validateForm() {
            let isValid = true;
            // Clear previous errors
            document.querySelectorAll('.error-message').forEach(el => el.textContent = '');

            // Validate image inputs
            ['image1', 'image2', 'image3', 'image4'].forEach((imageName, index) => {
                const fileInput = document.getElementById('input' + (index + 1));
                const file = fileInput.files[0];
                const errorElement = document.getElementById(imageName + '-error');

                if (file) {
                    if (!['image/jpeg', 'image/png', 'image/jpg'].includes(file.type)) {
                        errorElement.textContent = 'Invalid file type. Only JPEG, PNG, and JPG are allowed.';
                        isValid = false;
                    }
                    if (file.size > 2 * 1024 * 1024) { // 2MB limit
                        errorElement.textContent = 'File size exceeds 2MB.';
                        isValid = false;
                    }
                } else {
                    errorElement.textContent = 'This field is required.';
                    isValid = false;
                }
            });
            return isValid;
        }

        $(document).ready(function () {
            $('#addProductForm').on('submit', function (e) {
                e.preventDefault();

                var formData = new FormData(this);

                $.ajax({
                    url: '/admin/addProduct',
                    type: 'POST',
                    data: formData,
                    contentType: false,
                    processData: false,
                    success: function (response) {
                        if (response.success) {
                            alert('Product added successfully!');
                            $('#addProductModal').modal('hide');
                            window.location.reload();  
                        } else {
                            $('#error-message').text(response.error).show(); 
                        }
                    },
                    error: function (xhr) {
                        const errorMessage = xhr.responseJSON ? xhr.responseJSON.error : 'An unknown error occurred.';
                        $('#error-message').text(errorMessage).show();  
                    }
                });
            });
        });

        $(document).ready(function () {
            $('#editProductForm').on('submit', function (e) {
                e.preventDefault();

                var formData = new FormData(this);
                var formObject = {};

                // Convert FormData to a simple object
                formData.forEach(function (value, key) {
                    formObject[key] = value;
                });
                $.ajax({
                    url: '/admin/updateProduct',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(formObject),
                    processData: false,
                    success: function (response) {
                        alert('Product updated successfully!');
                        $('#editProductModal').modal('hide');
                        window.location.reload();
                    },
                    error: function (xhr, status, error) {
                        const errorMessage = xhr.responseJSON ? xhr.responseJSON.error : 'An unknown error occurred';
                        $('#edit-error-message').text(errorMessage || 'An error occurred. Please try again.');
                    }
                });
            });
        });

        // Attach validateForm function to form submission
        document.querySelector('form').addEventListener('submit', function (event) {
            if (!validateForm()) {
                event.preventDefault();
            }
        });

        // pagination
        $(document).ready(function () {
            $('#productTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                lengthChange: true,
                pageLength: 10,
            });
        });


        $(document).ready(function () {
            $('#productTable').on('click', '.btn-primary.btn-sm.ml-2', function () {
                const productId = $(this).data('id');

                // Make an AJAX request to fetch the product details from the backend
                $.ajax({
                    url: `/admin/editProduct/${productId}`,
                    method: 'GET',
                    success: function (productData) {
                        console.log(productData)
                        // Populate the modal fields with the product details
                        $('#editProductId').val(productData._id);
                        $('#editProductName').val(productData.productName);
                        $('#editBrand').val(productData.brand);
                        $('#editCategory').val(productData.category);
                        $('#editDescription').val(productData.description);
                        $('#editRegularPrice').val(productData.regularPrice);
                        $('#editQuantity').val(productData.quantity);
                        $('#editColor').val(productData.color);
                        $('#editBrakeStyle').val(productData.brakeStyle);
                        $('#editNumberOfGears').val(productData.numberOfGears);

