<style>
    .error-message {
        color: red;
    }

    .thumbnails-container {
        display: flex;
        overflow-x: auto;
    }

    .thumbnail {
        margin-right: 10px;
    }

    .image-cropper {
        width: 100%;
        height: auto;
        margin-bottom: 20px;
    }

    .brand-category-container {
        display: flex;
        justify-content: space-between;
    }

    .form-group {
        width: 48%;
    }

    .modal-dialog {
        max-width: 100vw;
        width: auto;
        margin: 0.5rem auto;
        overflow-x: auto;
    }

    .modal-content {
        max-height: 180vh;
        overflow-y: auto;
        border-radius: 8px;
        padding: 20px;
    }

    .image-cropper {
        max-height: 80vh;
        width: 100%;
        object-fit: contain;
    }

    .modal-body {
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

    .modal-body img {
        width: 100%;
        height: auto;
        box-sizing: border-box;
        overflow: hidden;
    }

    .modal {
        z-index: 1050;
    }

    .form-control,
    .form-select {
        max-width: 100%;
    }

    .modal-body-edit {
        width: 100%;
        height: auto;
        box-sizing: border-box;
    }

    .modal-header,
    .modal-footer {
        border-bottom: 1px solid #dee2e6;
    }

    .modal-footer {
