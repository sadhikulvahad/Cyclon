    <script>
        function viewImageAndOpenCropperModal(event, modalId, croppedImageInputId, cropBtnId, previewImageId) {
            const file = event.target.files[0];
            const reader = new FileReader();

            reader.onload = function (e) {
                const cropperImage = document.getElementById('cropperImage' + modalId.slice(-1));
                cropperImage.src = e.target.result;

                if (cropperImage.cropper) {
                    cropperImage.cropper.destroy();
                }

                const modal = new bootstrap.Modal(document.getElementById(modalId));
                modal.show();

                const cropper = new Cropper(cropperImage, {
                    aspectRatio: NaN,
                    viewMode: 1,
                    responsive: true,
                    autoCropArea: 1,
                });

                const cropBtn = document.getElementById(cropBtnId);

                cropBtn.removeEventListener('click', cropAndCloseModal);

                function cropAndCloseModal() {
                    const canvas = cropper.getCroppedCanvas({
                        width: 600,
                        height: 600,
                    });

                    canvas.toBlob(function (blob) {
                        const croppedImageUrl = URL.createObjectURL(blob);
                        const previewImage = document.getElementById(previewImageId);
                        previewImage.src = croppedImageUrl;
                        previewImage.style.display = 'block';

                        const croppedFile = new File([blob], file.name, { type: file.type });
                        const dt = new DataTransfer();
                        dt.items.add(croppedFile);
                        document.getElementById(croppedImageInputId).files = dt.files;
                        console.log(document.getElementById(croppedImageInputId).files)
                        // Revoke the object URL after a short delay to ensure it's loaded
                        setTimeout(() => {
                            URL.revokeObjectURL(croppedImageUrl);
                        }, 1000);
                    }, file.type);

                    cropper.destroy();
                    modal.hide();
                }

                cropBtn.addEventListener('click', cropAndCloseModal, { once: true });
            };

            reader.readAsDataURL(file);
        }

        $(document).ready(function () {
            $('.modal-footer').on('click', '.btn-secondary', function () {
