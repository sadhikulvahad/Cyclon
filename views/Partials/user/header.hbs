<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cyclon</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://kit.fontawesome.com/ffc1a57fff.js" crossorigin="anonymous"></script>
    <style>
        .navbar-brand {
            display: flex;
            align-items: center;
            margin-right: auto;
        }

        .navbar-nav {
            display: flex;
            align-items: center;
        }

        .navbar-nav .nav-link {
            display: flex;
            align-items: center;
            margin-right: 10px;
            font-size: 1.5rem;
        }

        .navbar-nav .nav-link img {
            margin-left: 10px;
        }

        .form-control {
            margin-right: 10px;
        }

        .navbar {
            padding-left: 15px;
            padding-right: 15px;
        }

        .container-fluid {
            display: flex;
            align-items: center;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src="/images/Logo.png" alt="Cyclon Logo" width="150" height="50" class="d-inline-block align-top">
            </a>
            <form class="form-inline my-2 my-lg-0" action="/shop" method="GET">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="search"
                    value="{{search}}">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
            <div class="navbar-nav ms-auto">
                {{#if userData}}
                <!-- User logged in -->
                <div class="dropdown">
                    <button data-bs-toggle="dropdown" class="border-0 bg-transparent">
                        <i class="bi bi-person fs-2"></i>
                    </button>
                    <ul class="dropdown-menu" style="z-index: 1000;">
                        <li><a class="dropdown-item" href="/profile">Profile</a></li>
                        <li><a class="dropdown-item" href="/orders">Orders</a></li>
                        <li><a class="dropdown-item" href="/wishlist">Wishlist</a></li>
                        <li><a class="dropdown-item" href="/wallet">Wallet</a></li>
                        <li><a class="dropdown-item" href="/coupons">Coupons</a></li>
                        <li><a class="dropdown-item" href="#" data-bs-toggle="modal"
                                data-bs-target="#logoutModal">Logout</a></li>
                    </ul>
                </div>
                <a class="nav-link" href="/cart"><i class="fas fa-shopping-cart"></i></a>
                <a class="nav-link" href="/wishlist"><i class="fa-solid fa-heart" style="color:red;"></i></a>

                {{else}}
                <!-- User not logged in -->
                <a class="nav-link" href="/cart"><i class="fas fa-shopping-cart"></i></a>
                <a class="nav-link" href="/wishlist"><i class="fa-solid fa-heart" style="color:red;"></i></a>
                <a class="nav-link" href="/login">Login</a>
                <a class="nav-link" href="/signup">Signup</a>
                {{/if}}
            </div>
        </div>
    </nav>

    <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="logoutModalLabel">Confirm Logout</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to log out?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <a href="/logout" class="btn btn-primary">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const searchInput = document.querySelector('input[name="search"]');
            const suggestionBox = document.createElement('div');
            suggestionBox.classList.add('suggestions');

            searchInput.parentElement.appendChild(suggestionBox); // Append suggestions below input

            searchInput.addEventListener('input', function () {
                const query = this.value;

                if (query.length > 0) {
                    // Make an AJAX request to get search suggestions
                    fetch(`/search-suggestions?query=${query}`)
                        .then(response => response.json())
                        .then(suggestions => {
                            suggestionBox.innerHTML = ''; // Clear previous suggestions
                            suggestions.forEach(suggestion => {
                                const div = document.createElement('div');
                                div.textContent = suggestion; // Replace with your suggestion property
                                suggestionBox.appendChild(div);
                            });
                        });
                } else {
                    suggestionBox.innerHTML = ''; // Clear if input is empty
                }
            });
        });
    </script>

</body>

</html>