                </li>
                <li class="nav-item mb-3">
                    <a href="/admin/addProduct" class="nav-link">
                        <i class="bi bi-box-seam"></i> Products
                    </a>
                </li>
                <!-- Add more sidebar items here -->
                <li class="nav-item mb-3">
                    <a href="/admin/categories" class="nav-link">
                        <i class="bi bi-box"></i> Categories
                    </a>
                </li>
                <li class="nav-item mb-3">
                    <a href="#" class="nav-link">
                        <i class="bi bi-tags-fill"></i> Offers
                    </a>
                </li>
                <li class="nav-item mb-3">
                    <a href="#" class="nav-link">
                        <i class="bi bi-image-fill"></i> Banners
                    </a>
                </li>
                <li class="nav-item mb-3">
                    <a href="#" class="nav-link">
                        <i class="bi bi-currency-dollar"></i> Payments
                    </a>
                </li>
                <li class="nav-item mb-3">
                    <a href="#" class="nav-link">
                        <i class="bi bi-ticket-fill"></i> Coupons
                    </a>
                </li>
                <li class="nav-item mb-3">
                    <a href="#" class="nav-link">
                        <i class="bi bi-person-fill"></i> Profile
                    </a>
                </li>
                <li class="nav-item mb-3">
                    <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#logoutModal">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </a>
                </li>
            </ul>
        </nav>

        <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="logoutModalLabel">Confirm Logout</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to log out?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <a href="/admin/logout" class="btn btn-primary">Logout</a>
                </div>
            </div>
        </div>
    </div>

