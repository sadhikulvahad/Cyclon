<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Wallet</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .wallet-balance {
            background-color: #4CAF50;
            color: white;
        }
        .breadcrumb-item + .breadcrumb-item::before {
            content: ">";
        }
    </style>
</head>
<body>
    {{> user/header}}
    <div class="container mt-4">
        <h3 class="mb-2">Your Wallet</h3>
        <div class="card mb-4">
            <div class="card-header wallet-balance">
                Wallet Balance
            </div>
            <div class="card-body">
                <h4 class="card-title">₹{{walletBalance}}</h4>
            </div>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Amount</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                {{#each transactions}}
                    <tr>
                        <td>{{this.type}}</td>
                        <td>₹{{this.amount}}</td>
                        <td>{{this.description}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>

        <div class="d-flex justify-content-between align-items-center mt-3">
            <p>Showing {{paginationStart}} to {{paginationEnd}} of {{totalEntries}} entries</p>
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item {{#unless hasPrevious}}disabled{{/unless}}">
                        <a class="page-link" href="#" {{#unless hasPrevious}}tabindex="-1" aria-disabled="true"{{/unless}}>Previous</a>
                    </li>
                    {{#each pages}}
                        <li class="page-item {{#if this.active}}active{{/if}}">
                            <a class="page-link" href="#">{{this.number}}</a>
                        </li>
                    {{/each}}
                    <li class="page-item {{#unless hasNext}}disabled{{/unless}}">
                        <a class="page-link" href="#" {{#unless hasNext}}tabindex="-1" aria-disabled="true"{{/unless}}>Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</body>
</html>
