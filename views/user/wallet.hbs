<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Wallet</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- DataTables CSS -->
    <link href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" rel="stylesheet">
    <style>
        .wallet-balance {
            background-color: #4CAF50;
            color: white;
        }
        .breadcrumb-item + .breadcrumb-item::before {
            content: ">";
        }
    </style>
</head>
<body>
    {{> user/header}}
    <div class="container mt-4">
        <h3 class="mb-2">Your Wallet</h3>
        <div class="card mb-4">
            <div class="card-header wallet-balance">
                Wallet Balance
            </div>
            <div class="card-body">
                <h4 class="card-title">₹{{walletBalance}}</h4>
            </div>
        </div>

        <table id="walletTable" class="table table-striped">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Amount</th>
                    <th>Description</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                {{#each transactions}}
                    <tr>
                        <td style="color: {{#if (eq this.type 'debit')}}red{{else}}green{{/if}};">{{this.type}}</td>
                        <td style="color: {{#if (eq this.type 'debit')}}red{{else}}green{{/if}};">₹{{this.amount}}</td>
                        <td>{{this.description}}</td>
                        <td>{{formatDate this.createdOn}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
        
        <!-- Removed the manual pagination and added DataTables integration -->

    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#walletTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "order": [[3, "desc"]],  // Order by date by default (column index 3)
                "pageLength": 10          // Show 10 entries per page
            });
        });
    </script>
</body>
</html>
