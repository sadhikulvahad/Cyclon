<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Wishlist</title>
    <style>
        .wishlist-item {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 8px;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
        }

        .product-image img {
            max-width: 150px;
            height: auto;
            border-radius: 8px;
        }

        .product-image {
            padding: 5px;
        }

        h2 {
            font-size: 1.15rem;
            margin-bottom: 3px;
        }

        p.text-muted {
            font-size: 0.75rem;
            margin-bottom: 3px;
        }

        p.text-danger {
            font-size: 0.8rem;
        }

        h3 {
            font-size: 1.1rem;
        }

        .quantity-selector {
            display: flex;
            align-items: center;
            border: 1px solid #ddd;
            border-radius: 4px;
            overflow: hidden;
            width: fit-content;
        }

        .quantity-selector button {
            background: none;
            border: none;
            padding: 2px 5px;
            font-size: 12px;
        }

        .quantity-selector input {
            width: 30px;
            text-align: center;
            border: none;
            border-left: 1px solid #ddd;
            border-right: 1px solid #ddd;
            padding: 2px;
            font-size: 12px;
        }

        .btn {
            padding: 3px 8px;
            font-size: 0.8rem;
        }
    </style>
</head>

<body>
    {{>user/header}}
    <div class="container">
        {{#if wishlist}}
        {{#each wishlist}}
        <div class="wishlist-item">
            <div class="col-md-3 product-image">
                <img src="/uploads/resized/{{this.productImages.[0]}}" alt="{{this.productImages}}" class="img-fluid">
            </div>
            <div class="col-md-9">
                <h2 class="mb-1">{{this.productName}}</h2>
                <p class="text-muted">{{this.description}}</p>
                {{#if this.outOfStock}}
                <p class="text-danger">Out of Stock</p>
                {{/if}}
                <span class="text-muted"><span style="color: red;"
                        class="mb-0">{{this.productOffer}}%</span><del>M.R.P:₹{{this.regularPrice}}</del></span>
                <h3 class="text-primary mb-1">₹{{this.salePrice}}</h3>
                <p class="text-muted">Free Delivery {{this.deliveryDate}}</p>

                <div class="mt-2 d-flex justify-content-start">
                    <form action="/addToCart" method="POST" class="me-2">
                        <input type="hidden" name="productId" value="{{this._id}}">
                        <button type="submit" class="btn btn-primary">Add to Cart</button>
                    </form>
                    <button class="btn btn-danger wishlist-btn" type="button" data-product-id="{{this._id}}">Remove
                        item</button>
                </div>

            </div>
        </div>
        {{/each}}
        {{else}}
        <h6>No items in the wishlist</h6>
        {{/if}}
    </div>

    <script>

        document.addEventListener('DOMContentLoaded', function () {
            // Attach event listener for all wishlist buttons using event delegation
            document.body.addEventListener('click', function (event) {
                if (event.target && event.target.classList.contains('wishlist-btn')) {
                    const productId = event.target.getAttribute('data-product-id');
                    console.log(productId)

                    // Fetch request to remove item from wishlist
                    fetch("/addWishlist", {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ productId })
                    })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                window.location.reload(); // Reload the page to reflect changes
                            } else {
                                console.error('Error:', data.message);
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                        });
                }
            });
        });
    </script>
</body>

</html>