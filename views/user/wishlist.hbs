<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Wishlist</title>
    <style>
        .wishlist-item {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 8px;
            margin-bottom: 15px;
            display: flex;
            align-items: flex-start;
            justify-content: space-between;
        }

        .wishlist-item .product-image {
            flex: 0 0 150px;
            margin-right: 15px;
        }

        .wishlist-item .product-image img {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
        }

        .wishlist-item .product-info {
            flex: 1;
        }

        h2 {
            font-size: 1.15rem;
            margin-bottom: 6px;
        }

        p.text-muted {
            font-size: 0.75rem;
            margin-bottom: 5px;
        }

        p.text-danger {
            font-size: 0.85rem;
        }

        h3 {
            font-size: 1.1rem;
        }

        .price-info span {
            font-size: 0.9rem;
            margin-right: 10px;
        }

        .btn {
            padding: 5px 10px;
            font-size: 0.85rem;
        }

        .action-buttons {
            margin-top: 10px;
        }
    </style>
</head>

<body>
    {{>user/header}}
    <div class="container">
        {{#if wishlist}}
        {{#each wishlist}}
        <div class="wishlist-item">
            <div class="product-image">
                <a href="/product/{{_id}}">
                    <img src="/uploads/resized/{{this.productImages.[0]}}" alt="{{this.productImages}}">
                </a>
            </div>
            <div class="product-info">
                <a href="/product/{{_id}}" class="text-decoration-none text-dark">
                    <h2>{{this.productName}}</h2>
                </a>
                <p class="text-muted">{{this.description}}</p>

                {{#if this.outOfStock}}
                <p class="text-danger">Out of Stock</p>
                {{/if}}

                <div class="price-info">
                    <span style="color: red;">{{this.productOffer}}% OFF</span>
                    <span class="text-muted"><del>M.R.P: ₹{{this.regularPrice}}</del></span>
                    <h3 class="text-primary mb-1">₹{{this.salePrice}}</h3>
                </div>

                <p class="text-muted">Free Delivery by {{this.deliveryDate}}</p>

                <div class="action-buttons d-flex">
                    <form action="/addToCart" method="POST" class="me-2">
                        <input type="hidden" name="productId" value="{{this._id}}">
                        <button type="submit" class="btn btn-primary">Add to Cart</button>
                    </form>
                    <button class="btn btn-danger wishlist-btn" type="button" data-product-id="{{this._id}}">Remove
                        item</button>
                </div>
            </div>
        </div>
        {{/each}}
        {{else}}
        <h6>No items in the wishlist</h6>
        {{/if}}
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.body.addEventListener('click', function (event) {
                if (event.target && event.target.classList.contains('wishlist-btn')) {
                    const productId = event.target.getAttribute('data-product-id');
                    console.log(productId)

                    fetch("/addWishlist", {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ productId })
                    })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                window.location.reload();
                            } else {
                                console.error('Error:', data.message);
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                        });
                }
            });
        });
    </script>
</body>

</html>
