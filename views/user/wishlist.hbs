
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <style>
        /* Wishlist Page Styling */
        h3 {
            font-size: 2.5rem;
            text-align: center;
            margin-top: 20px;
            margin-bottom: 30px;
            font-weight: bold;
        }

        .container-fluid {
            display: flex;
            justify-content: center;
        }

        .wishlist-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 80%;
            max-width: 1200px;
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 20px;
            background-color: #fff;
        }

        .product-image {
            width: 30%;
            max-width: 250px;
        }

        .product-image img {
            width: 100%;
            height: auto;
            border-radius: 10px;
            object-fit: cover;
        }

        .product-details {
            width: 65%;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .product-details h5 {
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

        .product-details p {
            font-size: 1rem;
            margin: 5px 0;
        }

        .remove-btn {
            margin-top: 10px;
            padding: 10px 20px;
            font-size: 1rem;
        }
    </style>

    {{> user/header}}

    <!-- Wishlist Heading -->
    <h3>Your Wishlist</h3>

    <div class="container-fluid">
        {{#each wishlist}}
        <div class="wishlist-item">
            <!-- Product Image -->
            <div class="product-image">
                <img src="{{this.productImage}}" alt="Product Image">
            </div>

            <!-- Product Details -->
            <div class="product-details">
                <h5>{{this.productName}}</h5>
                <p><strong>Price:</strong> ${{this.productPrice}}</p>
                <p><strong>Added on:</strong> {{this.addedOn}}</p>
                <button class="btn btn-danger remove-btn" onclick="removeFromWishlist('{{this.productId}}')">Remove</button>
            </div>
        </div>
        {{/each}}
    </div>

    <script>
        function removeFromWishlist(productId) {
            // Add logic for removing item from wishlist
            alert('Product ' + productId + ' removed from wishlist.');
        }
    </script>

