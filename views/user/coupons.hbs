
    <style>
        .coupon-icon {
            width: 40px;
            height: 40px;
            background-color: #e9ecef;
            border-radius: 4px;
        }

        .coupon-button {
            min-width: 80px;
        }
    </style>


    {{> user/header}}


    <div class="container py-4">
        <h1 class="mb-4">Your Coupons</h1>
        <div class="row">
            <div class="col-md-6 mb-4">
                {{#each yourCoupons}}
                <div class="card mb-3">
                    <div class="card-body d-flex align-items-center">
                        <div class="coupon-icon me-3"></div>
                        <div class="flex-grow-1">
                            <h5 class="card-title mb-1">{{this.offer}}</h5>
                            <p class="card-text text-muted small">{{this.description}}</p>
                        </div>
                        <button class="btn btn-warning coupon-button">Redeem</button>
                    </div>
                </div>
                {{/each}}
            </div>
            <div class="col-md-6">
                <h2 class="h4 mb-3">New Offers</h2>
                {{#each newOffers}}
                <div class="card mb-3">
                    <div class="card-body d-flex align-items-center">
                        <div class="coupon-icon me-3"></div>
                        <div class="flex-grow-1">
                            <h5 class="card-title mb-1">{{this.offer}}</h5>
                            <p class="card-text text-muted small">{{this.description}}</p>
                        </div>
                        <button class="btn btn-warning coupon-button">Collect</button>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>

